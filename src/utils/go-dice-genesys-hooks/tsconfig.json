{
  "compilerOptions": {
    "module": "NodeNext",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "allowJs": true,
    "outDir": "./",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "NodeNext",
    "incremental": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "watch": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/*"]
}
